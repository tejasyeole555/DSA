class Solution {
    public static boolean validPalindrome(String s) {
        int l = 0;
        int r = s.length()-1;
        while(l < r) {
            if (s.charAt(l) != s.charAt(r)) {
                return Palindrome(s,l+1,r) || Palindrome(s,l,r-1);
            }
            l++;
            r--;
        }
        return true;
    }

    private static boolean Palindrome(String s, int l, int r) {
        while (l < r) {
            if (s.charAt(l) != s.charAt(r)) {
                return false;
            }
            l++;
            r--;
        }
        return true;
    }
}
